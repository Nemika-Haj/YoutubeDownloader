doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        
        link(rel="shortcut icon", href="/static/assets/icon.ico", type="image/x-icon")

        link(rel="stylesheet", href="/static/styles/loader.css")
        link(rel="stylesheet" href="/static/styles/index.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet")

        title Youtube Video Downloader
    body
        input#loader(type="checkbox")
        .load
            .loader Downloading

        .downloadInfo
            p.header Download Video
            hr
            p.inputLabel Enter Youtube URL
            span(contenteditable).urlInput#youtubeVideoURL

            button.downloadButton#downloadVideo Click to download!
        
        .downloadInfo
            p.header Download Song
            hr
            p.inputLabel Enter Youtube URL
            span(contenteditable).urlInput#youtubeSongURL

            button.downloadButton#downloadSong Click to download!

        #downloadDone
            p#doneHeader
            hr
            p#doneDescription


        script(src="/eel.js") 
        script(src="/static/js/index.js")